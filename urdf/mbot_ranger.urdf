<robot name="test_robot">

  <link name="base_footprint">
    <visual>
      <geometry>
        <box size="0.24 0.17 0.18"/>
      </geometry>
      <origin xyz="0.02 0 0.09" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 0.4"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.24 0.17 0.18"/>
      </geometry>
      <origin xyz="0.02 0 0.09" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.20 0.17 0.18"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <material name="blue">
        <color rgba="0.0117 0.541 1 0.4"/>
      </material>
    </visual>
  </link>

  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.09" rpy="0 0 0" />
  </joint>
  
  <link name="lwheel">
    <visual>
      <geometry>
        <cylinder length="0.008" radius="0.0198"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  
  <joint name="base_to_lwheel" type="continuous">
    <parent link="base_link"/>
    <child link="lwheel"/>
    <origin xyz="-0.078 0.071 -0.068" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <link name="rwheel">
    <visual>
      <geometry>
        <cylinder length="0.008" radius="0.0198"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  
  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child link="rwheel"/>
    <origin xyz="-0.078 -0.071 -0.068" rpy="1.5708 0 0"/>
    <axis xyz="0 0 -1"/> 
  </joint>
  
  <link name="laser">
    <visual>
      <geometry>
        <box size="0.095 0.06 0.045"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.022 0 0.015"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0 0 0.08775" rpy="0 0 0"/> <!-- Adjusted rpy -->
  </joint>
  
  <link name="sonar">
    <visual>
      <geometry>
        <box size="0.001 0.05 0.045"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="s_color">
        <color rgba="1 0 1 1"/>
      </material>
    </visual>
  </link>
  
  <joint name="base_to_sonar" type="fixed">
    <parent link="base_link"/>
    <child link="sonar"/>
    <origin xyz="0.09 0 0.04" rpy="0 0 0"/>
  </joint>
  
</robot>
